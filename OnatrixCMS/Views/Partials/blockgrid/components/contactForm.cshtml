@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;
@{   
    var sectionTitle = Model?.Content.Value<string>("sectionTitle") ?? ""; 
    var formHeader = Model?.Content.Value<string>("formHeader") ?? "";
    var formText = Model?.Content.Value<string>("formText") ?? "";

    var spacingTopClass = (Model!.Content.Value<bool>("addSpaceToTop")) ? "spacing-top" : "";
    var spacingBottomClass = (Model!.Content.Value<bool>("addSpaceToBottom")) ? "spacing-bottom" : "";
    var centerContentClass = (Model!.Content.Value<bool>("centerContentOnPage")) ? "center" : "";
}

<section id="contact-form" class="@spacingTopClass spacingBottomClass">

    <div class="container @centerContentClass">

        <form>
            <h6>@sectionTitle</h6>
            <h2>@formHeader</h2>
            <i>@formText</i>
            <div class="content">
                <div class="form-input-group">
                    <label class="form-label" for="name"></label>
                    <input id="name" name="name" type="text" placeholder="Name" class="form-input">
                    <!-- <span class="form-input-error">You must enter your name</span> -->
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="phone"></label>
                    <input id="phone" name="phone" type="text" placeholder="Phone" class="form-input">
                    <!-- <span class="form-input-error">You must enter your phone number</span> -->
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="email"></label>
                    <input id="email" name="email" type="email" placeholder="Email address" class="form-input">
                    <!-- <span class="form-input-error">You must enter an valid e-mail address</span> -->
                </div>
                <div class="form-input-group">
                    <select id="consulting" name="consulting" class="form-select">
                        <option selected>Financial consulting</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="form-button btn-primary">Submit</button>

        </form>

    </div>

</section>