@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var asideHeader = Model?.Content.Value<string>("asideHeader") ?? "";
    var selectedImage = Model?.Content.Value<IPublishedContent>("selectedImage")?.Url() ?? null;
    var asideText = Model?.Content.Value<string>("asideText") ?? "";
}

<section id="aside-content">
       
    <h4>@asideHeader</h4>

    @if (!string.IsNullOrEmpty(selectedImage)) {
        
        <img src="@selectedImage" alt="">
    }

    <p>@asideText</p>
    
</section>